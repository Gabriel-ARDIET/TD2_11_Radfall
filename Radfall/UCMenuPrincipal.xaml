<UserControl x:Name="windowMenu" x:Class="Radfall.UCMenuPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Radfall"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <Label Name="labTitre" Content="Radfall" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" 
               FontFamily="Algerian" FontSize="144" Background="Transparent" FontWeight="Bold" Foreground="White" Grid.RowSpan="4"/>
        <Button x:Name="butJouer" Content="Jouer" Height="74" Width="350" HorizontalAlignment="Center" 
                VerticalAlignment="Center" FontSize="36" FontFamily="Arial Black" Grid.Row="1"/>
        <Button x:Name="butOption" Content="Options" Width="350" Height="76" HorizontalAlignment="Center" 
                VerticalAlignment="Center" FontSize="36" FontFamily="Arial Black" Grid.Row="2" Click="butOption_Click"/>
        <Button x:Name="butCredit" Content="Crédits" Width="350" Height="76" HorizontalAlignment="Center" 
                VerticalAlignment="Center" FontSize="36" FontFamily="Arial Black" Grid.Row="3"/>
    </Grid>
</UserControl>
