<UserControl x:Name="windowMenu" x:Class="Radfall.UCMenuPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Radfall"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Resources>
        <FontFamily x:Key="LabelFontFamily1">/fonts/#Angelic War</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <Label Name="labTitre" Content="Radfall" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" 
               FontFamily="{DynamicResource Aniron}" FontSize="200" Background="Transparent" FontWeight="Bold" Foreground="White" Grid.RowSpan="4"/>
        <Button x:Name="butJouer"
                Height="150" 
                Width="500" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="36" 
                FontFamily="{DynamicResource AngelicSerif}" 
                Grid.Row="1"
                Background="Transparent"
                BorderThickness="0">
            <Grid>
                <Image Source="/assets/ui/Bar.png" Stretch="Fill"/>
                <TextBlock Text="Jouer"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="36"
                           FontFamily="Arial Black"/>
            </Grid>
        </Button>
        <Button x:Name="butOption" 
                Width="500" 
                Height="150" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="36" 
                FontFamily="Arial Black" 
                Grid.Row="2" 
                Click="butOption_Click"
                Background="Transparent"
                BorderThickness="0">
            <Grid>
                <Image Source="/assets/ui/Button.png" Stretch="Fill"/>
                <TextBlock Text="Options"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="36"
                           FontFamily="Arial Black"/>
            </Grid>
        </Button>
        <Button x:Name="butCredit" 
                Width="500" 
                Height="150" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="36" 
                FontFamily="Arial Black" 
                Grid.Row="3"
                Background="Transparent"
                BorderThickness="0">
            <Grid>
                <Image Source="/assets/ui/Button.png" Stretch="Fill"/>
                <TextBlock Text="Crédits"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="36"
                   FontFamily="Arial Black"
                   />
            </Grid>
        </Button>
    </Grid>
</UserControl>
