<Window x:Class="Radfall.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radfall"
        mc:Ignorable="d"
        Title="Options" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="175*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labDroite" Content="Droite :" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Height="30" Width="70" Margin="0,66,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="labGauche" Content="Gauche :" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Height="30" Width="70" Margin="0,126,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="labSaut" Content="Saut :" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Height="30" Width="70" Margin="0,186,0,0"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox Name="txtDroite" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Height="30" Width="100"
            Margin="0,66,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>
                   
        <TextBox x:Name="txtGauche" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Height="30" Width="100"
            Margin="0,126,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>
        
        <TextBox x:Name="txtSaut" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Height="30" Width="100"
            Margin="0,186,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>
        
        
        <Button x:Name="butValider" Grid.Column="1" Content="Valider" Width="75" Height="25" HorizontalAlignment="Center" Margin="0,374,0,0" VerticalAlignment="Top" Click="butValider_Click"/>
        <Button x:Name="butAnnuler" Grid.Column="2" Content="Annuler" Width="75" Height="25" HorizontalAlignment="Center" Margin="0,374,0,0" VerticalAlignment="Top" Click="butAnnuler_Click"/>

    </Grid>
</Window>
