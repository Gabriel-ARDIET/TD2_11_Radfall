<Window x:Class="Radfall.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radfall"
        mc:Ignorable="d"
        MinHeight="300" MinWidth="200"
        Title="Options" Height="450" Width="500" Topmost="True"
        Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="365*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="175*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labDroite" Content="Droite :"  Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0,60,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>
        <Label x:Name="labGauche"  Style="{StaticResource LabelStyle}" Content="Gauche :" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>
        <Label x:Name="labHaut" Content="Haut :" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>
        <Label x:Name="labBas" Content="Bas :"  Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0,240,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>

        <TextBox Name="txtDroite" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"
            Margin="0,66,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <TextBox x:Name="txtGauche" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Height="30" Width="100"
            Margin="0,126,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <TextBox x:Name="txtHaut" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Height="30" Width="100"
            Margin="0,186,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <TextBox x:Name="txtBas" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Height="30" Width="100"
            Margin="0,246,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <Label x:Name="labAttaquer" Content="Attaquer :"  Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Margin="0,60,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="labDash" Content="Dash :"  Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Margin="0,120,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="labNoClip" Content="NoClip :" HorizontalAlignment="Center"  Style="{StaticResource LabelStyle}" VerticalAlignment="Top" Grid.Column="2" Margin="0,180,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="labSaut" Content="Saut :"  Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,240,0,0"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="2"/>

        <TextBox Name="txtAttaquer" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Height="30" Width="100"
            Margin="0,66,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <TextBox x:Name="txtDash" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Height="30" Width="100"
            Margin="0,126,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <TextBox x:Name="txtNoClip" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Height="30" Width="100"
            Margin="0,186,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <TextBox x:Name="txtSaut" Style="{StaticResource TextBoxStyle}" Text="Entrez une touche" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Height="30" Width="100"
            Margin="0,246,0,0" TextAlignment="Center" TextWrapping="Wrap" Background="LightGray" PreviewKeyDown="KeyCapture" GotFocus="txtGotFocus"/>

        <Button x:Name="butValider" Style="{StaticResource ButtonStyle}" FontSize="100" Grid.Column="0" Grid.ColumnSpan="2" Content="Valider" Width="200" Height="105" HorizontalAlignment="Center" Margin="0,-15,0,0" VerticalAlignment="Top" Click="butValider_Click" Grid.Row="1"/>
        <Button x:Name="butAnnuler" Style="{StaticResource ButtonStyle}" FontSize="15" Grid.Column="2" Grid.ColumnSpan="2" Content="Annuler" Width="200" Height="105" HorizontalAlignment="Center" Margin="0,-15,0,0" VerticalAlignment="Top" Click="butAnnuler_Click" Grid.Row="1"/>

    </Grid>
</Window>
